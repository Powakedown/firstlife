$('#skill-<%= @skill.id %>').html('<%= j render "skills/skill", skill: @skill %>');

<% @skill.children.each do |skill| %>
  <% if skill.level %>
    $('#skill-<%= skill.id %>').html('<%= j render "skills/skill", skill: skill %>');
  <% end %>
<% end %>

$('#skill-root').removeClass("expandOpen");
window.requestAnimationFrame(function(time) {
window.requestAnimationFrame(function(time) {
    $('#skill-root').addClass("expandOpen");
  });
  });

$('#skill-root .skill-count').text('<%= current_user.skills.where(tree: @skill.tree, level: nil).count %>');

