$('#skill-<%= @user_skill.skill.id %>').html('<%= j render "skills/skill", skill: @user_skill.skill, user: current_user %>');

<% @user_skill.skill.children.each do |skill| %>
  <% if skill.level %>
    $('#skill-<%= skill.id %>').html('<%= j render "skills/skill", skill: skill %>');
  <% end %>
<% end %>

$('#skill-root .skill-count').text('<%= current_user.skills.where(tree: @user_skill.skill.tree, level: nil).count %>');
