<% provide(:title, "Talents") %>

<div class="container">
  <div class="row">
      <div class="col-md-12 talents text-center">

          <h1><%= pluralize( @result, @query)  %> Ã  <%= @address %></h1>

      </div>
    </div>
  <div class="row">
  <% @users.each do |user| %>
    <div class="col-xs-12 col-md-3 text-center" >
      <%= link_to user_path(user) do %>
      <div class="card-user">
        <div class="card-profile">
          <div class="card-profile-level">
            <span>niveaux</span>
            <%= user.skills.where(tree: @tree).count %>
          </div>
          <div class="card-profile-avatar">
            <%= cl_image_tag user.photo.path,  width: 173, height: 173, radius: "max", crop: "fill"%>
          </div>
          <div class="card-profile-username">
            <%= user.first_name %> <%= user.last_name %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>


