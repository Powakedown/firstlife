<div class="user-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-one">
        <div class="card-avatar">
          <div class="card-avatar-image">
            <%= cl_image_tag @user.photo.path, class: "img-circle avatar" %>
            <!-- <img src="http://www.croop.cl/UI/twitter/images/carl.jpg" alt="avatar" class="img-circle"> -->
          </div>
          <div class="card-avatar-name">
            <p><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></p>
          </div>
          <div class="card-avatar-name-description">
            <p> Etudiant au wagon </p>
          </div>
        </div>

        <div class="card-avatar-rang">
          <div class="card-rang">
            <p> RANGS ATTEINTS </p>
          </div>
          <div class="card-rang-image">
            <%= image_tag "rang_ecology.png" %>
            <%= image_tag "rang_masterweb1.png" %>
          </div>
        </div>

        <div class="card-avatar-rang">
          <div class="card-rang">
            <p> OBJECTIFS ACCOMPLIS </p>
          </div>
          <div class="card-rang-image">
            <%= image_tag "objectif_1.png" %>
          </div>
        </div>
      </div>

      <div class="col-two">
        <div class="talents-tile">
          <h1> TALENTS </h1>
        </div>
          <%= render "skills/skill_design"%>
      </div>

      <div class="col-three">
          <div class="talents-tile">
             <h1>PROFILE DETAILS</h1>

          </div>
      </div>
    </div>
  </div>
</div>

